{
  "name": "SearchSwitch",
  "version": "2.1",
  "manifest_version": 2,
  "description": "A way to switch to any other search you want whenever you want.",
  "icons":{
    "48": "images/icon.png"
  },

  "background": {
    "page": "background.html",
    "persistent": false
  },

  "permissions": [
    "webNavigation"
  ],

  "content_scripts": [
    {
      "matches": ["*://www.google.com/*", 
                  "*://www.bing.com/*", 
                  "*://www.youtube.com/*",
                  "*://*.wikipedia.org/*",
                  "*://*.yahoo.com/*"],
      "css": ["css/ss_main.css"],
      "js": ["js/jquery.min.js", "js/ss_content.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ]
}